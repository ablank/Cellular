{
  "name": "cellular",
  "version": "1.0.0",
  "private": false,
  "description": "A responsive base theme for Drupal",
  "author": {
    "name": "Adam Blankenship",
    "email": "i.adambear@gmail.com",
    "url": "http://ablank.github.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ablank/cellular"
  },
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "sass": "node-sass --output-style compressed -o dist/css src/sass",
    "lint": "eslint src/js || true",
    "lint-sass": "stylelint src/sass/**/*.scss --config .stylelintrc.json --syntax scss --fix",
    "uglify": "mkdirp dist/js -p && uglifyjs src/js/*.js -m -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
    "imagemin": "imagemin src/images/* -o dist/images",
    "icons": "svgo -f src/images/icons -o dist/images/icons && svg-sprite-generate -d dist/images/icons -o dist/images/icons/sprite.svg",
    "serve": "browser-sync start --server --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "run-s lint-sass sass autoprefixer",
    "build:js": "run-s lint uglify",
    "build:images": "run-s imagemin icons",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/sass\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch:images": "onchange \"src/images\" -- run-s build:images",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "browser-sync": "^2.26.14",
    "eslint": "^7.19.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "imagemin-cli": "^6.0.0",
    "mkdirp": "^1.0.4",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^1.3.2",
    "uglify-js": "^3.12.6"
  },
  "dependencies": {
    "jquery": "^3.5.1",
    "@popperjs/core": "^2"
  }
}
