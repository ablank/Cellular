{
  "breakpoint": {
    "unit": {
      "category": "unit",
      "value": "px"
    },
    "small": {
      "category": "mediaquery",
      "value": "500",
      "comment": "Styles for mobile devices."
    },
    "narrow": {
      "category": "mediaquery",
      "value": "960",
      "comment": "Styles for tablets."
    },
    "default": {
      "category": "mediaquery",
      "value": "1600",
      "comment": "Styles for most laptop & desktop computers. Anything greater than this breakpoint is considered 'large'"
    }
  },
  "mediaquery": {
    "small": {
      "category": "mediaquery",
      "value": "'(max-width: {breakpoint.small.value}{breakpoint.unit.value})'"
    },
    "narrow": {
      "category": "mediaquery",
      "value": "'(min-width: {breakpoint.small.value}{breakpoint.unit.value}) and (max-width: {breakpoint.narrow.value}{breakpoint.unit.value})'"
    },
    "default": {
      "category": "mediaquery",
      "value": "'(min-width: {breakpoint.narrow.value}{breakpoint.unit.value}) and (max-width: {breakpoint.default.value}{breakpoint.unit.value})'"
    },
    "large": {
        "category": "mediaquery",
        "value": "'(min-width: {breakpoint.default.value}{breakpoint.unit.value})'"
    },
    "retina": {
        "category": "mediaquery",
        "value": "'screen and (min-resolution: 192dpi) and (min-resolution: 2dppx)'"
    }
  }
}
