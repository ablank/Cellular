{
  "source": [
    "src/style-dictionary/tokens/**/*.json",
    "src/style-dictionary/info.json"
  ],
  "platforms": {
    "scss": {
      "transformGroup": "sass/cellular",
      "buildPath": "src/",
      "files": [{
        "format": "sass/cellular",
        "destination": "sass/_variables/_style-dictionary.scss"
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "src/",
      "files": [{
        "format": "json/flat",
        "destination": "js/style-dictionary.json"
      }]
    },
    "info": {
      "transformGroup": "yaml",
      "buildPath": "./",
      "files": [{
        "format": "yaml/info",
        "destination": "cellular.info.yml"
      }]
    },
    "breakpoints": {
      "transformGroup": "yaml",
      "buildPath": "./",
      "files": [{
        "format": "yaml/breakpoints",
        "destination": "cellular.breakpoints.yml"
      }]
    }
  }
}