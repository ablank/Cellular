<%
var theme = "",
breakpoint = {
  default: "",
  small: "",
  narrow: "",
  large: ""
},
allProperties = _.each(allProperties, function(prop) {
    if(prop.attributes.category === 'breakpoint') {
      if(prop.name === "breakpoint_default"){
      breakpoint.default = prop.value;
      }
      if(prop.name === "breakpoint_small"){
      breakpoint.small = prop.value;
      }
      if(prop.name === "breakpoint_narrow"){
      breakpoint.narrow = prop.value;
      }
      if(prop.name === "breakpoint_large"){
      breakpoint.large = prop.value;
      }
    };
      if(prop.name === "info_name"){
      theme = prop.value.toLowerCase();
      }
}); 
