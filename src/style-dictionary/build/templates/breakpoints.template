cellular.screen.default:
  label: default
  mediaQuery: '(min-width: <% print(breakpoint.narrow) %> && (max-width: <% print(less1(breakpoint.default)) %>)'
  weight: 1
  group: screen
  multipliers:
    - 1x
    - 2x

cellular.screen.small:
  label: small
  mediaQuery: '(max-width: <% print(less1(breakpoint.small)) %>)'
  weight: 1
  group: screen
  multipliers:
    - 1x
    - 2x

cellular.screen.narrow:
  label: narrow
  mediaQuery: '(min-width: <% print(breakpoint.small) %> && max-width: <% print(less1(breakpoint.narrow)) %>)'
  weight: 1
  group: screen
  multipliers:
    - 1x
    - 2x

cellular.screen.large:
  label: large
  mediaQuery: '(min-width: <% print(breakpoint.default) %> && min-width: <% print(less1(breakpoint.large)) %>)'
  weight: 1
  group: screen
  multipliers:
    - 1x
    - 2x