<%
var breakpoint = {
  default: "",
  small: "",
  narrow: "",
  large: "",
},
allProperties = _.each(allProperties, function(prop) {
    if(prop.attributes.category === 'breakpoint') {
      if(prop.name === "BreakpointDefault"){
      breakpoint.default = prop.value;
      }
      if(prop.name === "BreakpointSmall"){
      breakpoint.small = prop.value;
      }
      if(prop.name === "BreakpointNarrow"){
      breakpoint.narrow = prop.value;
      }
      if(prop.name === "BreakpointLarge"){
      breakpoint.large = prop.value;
      }
    };
}),
less1 = function(mixedNum){
  var num = parseInt(mixedNum),
    unit = mixedNum.replace(/[0-9]/g, '');

  return num + unit;
}; 
