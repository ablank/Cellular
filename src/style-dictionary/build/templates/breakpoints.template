%>
<% print(theme) %>.screen.default:
  label: default
  mediaQuery: '(min-width: <% print(breakpoint.default) %>) && (max-width: <% print(breakpoint.large) %>)'
  weight: 1
  group: screen
  multipliers:
    - 1x
    - 2x

<% print(theme) %>.screen.small:
  label: small
  mediaQuery: '(max-width: <% print(breakpoint.small) %>)'
  weight: 1
  group: screen
  multipliers:
    - 1x
    - 2x

<% print(theme) %>.screen.narrow:
  label: narrow
  mediaQuery: '(min-width: <% print(breakpoint.small) %>) && (max-width: <% print(breakpoint.default) %>)'
  weight: 1
  group: screen
  multipliers:
    - 1x
    - 2x

<% print(theme) %>.screen.large:
  label: large
  mediaQuery: '(min-width: <% print(breakpoint.large) %>)'
  weight: 1
  group: screen
  multipliers:
    - 1x
    - 2x